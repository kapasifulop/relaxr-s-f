{
  "name": "relaxr",
  "private": true,
  "version": "0.0.1",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron:dev": "vite dev & tsc -p tsconfig.electron.json && ELECTRON=true electron .",
    "electron:build": "tsc -p tsconfig.electron.json && ELECTRON=true vite build && electron-builder"
  },
  "build": {
    "appId": "com.relaxr.app",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "directories": {
      "output": "release"
    }
  },
  "dependencies": {
    "@distube/ytdl-core": "4.15.4",
    "@electron/remote": "^2.1.2",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@heroicons/react": "^2.2.0",
    "autoprefixer": "^10.4.20",
    "electron-is-dev": "^2.0.0",
    "fluent-ffmpeg": "^2.1.3",
    "postcss": "^8.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^29.1.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.1.6"
  }
}
